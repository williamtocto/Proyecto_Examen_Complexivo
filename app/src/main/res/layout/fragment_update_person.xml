<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginTop="0dp">

    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="121dp" app:srcCompat="@drawable/my_profile_icon" android:id="@+id/logo_tienda2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
    />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="378dp"
            android:layout_height="234dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/contenedorRegistro"
            android:layout_marginTop="116dp" app:layout_constraintHorizontal_bias="0.636">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="69dp" android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txt_nombre_update" android:minHeight="48dp"
                    android:layout_marginStart="27dp" android:layout_marginTop="18dp" android:padding="15dp"
                    android:hint="Nombre" android:textColor="@color/verde_odiseum" android:textSize="15sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"/>
            <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="16dp" android:layout_marginStart="8dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txt_apellido_update" android:minHeight="48dp" android:layout_marginTop="18dp"
                    android:layout_marginStart="10dp"
                    android:padding="15dp" android:hint="Apellido" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="73dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="27dp"
                    android:padding="15dp" android:id="@+id/txt_telefono_update" android:hint="Telefonno"
                    android:textColor="@color/azul_claro" android:textSize="13sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"/>
            <View
                    android:id="@+id/divider9"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtDireccionUpdate" android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:padding="15dp" android:hint="Direccion" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                tools:ignore="MissingConstraints" android:id="@+id/linearLayout2" android:layout_marginEnd="0dp"
        >
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/txt_email" android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="27dp"
                    android:padding="15dp" android:hint="Email" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"/>
            <View
                    android:id="@+id/divider8"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginStart="8dp" android:layout_marginTop="10dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txt_cedula_update"
                    android:padding="15dp"
                    android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:hint="Cedula"
                    android:textColor="@color/azul_brillante" android:textSize="15sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="374dp"
            android:layout_height="181dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/contenedorUsuario"
            android:layout_marginTop="364dp" app:layout_constraintHorizontal_bias="0.567">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="69dp" android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txt_usuario_update" android:minHeight="48dp"
                    android:layout_marginStart="27dp" android:layout_marginTop="18dp" android:padding="15dp"
                    android:hint="usuario" android:textColor="@color/azul_claro" android:textSize="15sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"/>
            <View
                    android:id="@+id/divider2"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="16dp" android:layout_marginStart="8dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txt_clave_nueva" android:minHeight="48dp" android:layout_marginTop="18dp"
                    android:layout_marginStart="10dp"
                    android:padding="15dp" android:hint="Contraseña Nueva" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="73dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="27dp"
                    android:padding="15dp" android:id="@+id/txt_repetir_clave" android:hint="Confirmar Contraseña"
                    android:textColor="@color/azul_claro" android:textSize="13sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"/>
            <View
                    android:id="@+id/divider5"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"/>
            <Button
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10dp"
                    android:text="Editar"
                    android:layout_width="118dp"
                    android:layout_height="32dp" android:id="@+id/btn_editar"
                    android:textAllCaps="false" android:background="@drawable/backgraound_signup"
                    android:textColor="@color/white" android:textSize="16sp" android:textStyle="bold"
                    android:layout_marginBottom="84dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="Cancelar"
            android:layout_width="163dp"
            android:layout_height="54dp" android:id="@+id/btn_cancelar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false" android:background="@drawable/background_button_comprar"
            android:textColor="@color/white" android:textSize="16sp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.141"
            android:layout_marginBottom="40dp"/>
    <Button
            android:text="Guardar"
            android:layout_width="163dp"
            android:layout_height="54dp" android:id="@+id/btn_guardar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false" android:background="@drawable/background_button_comprar"
            android:textColor="@color/white" android:textSize="16sp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.879"
            android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>